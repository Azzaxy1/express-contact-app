<div class="row mt-4">
  <div class="col-md-8">
    <h2>Daftar Contact</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Nama</th>
          <th scope="col">No Handphone</th>
          <th scope="col">Detail</th>
        </tr>
      </thead>
      <tbody>
        <% if (contacts.length < 1) { %>
          <tr>
            <td colspan="4" class="text-center">
              <div class="alert alert-danger" role="alert">
                Data Contact masih kosong
              </div>
            </td>
          </tr>

          <% } else { %>
            <% contacts.forEach((contact, i)=> { %>
              <tr>
                <th scope="row">
                  <%= i + 1 %>
                </th>
                <td>
                  <%= contact.nama %>
                </td>
                <td>
                  <%= contact.nohp %>
                </td>
                <td>
                  <a href="/contact/<%= contact.nama %> " class="btn badge rounded-pill btn-success"><i
                      class="bi bi-info-circle"></i>
                    detail</a>
                </td>
              </tr>
              <% }) %>
                <% } %>
      </tbody>
    </table>
  </div>
</div>